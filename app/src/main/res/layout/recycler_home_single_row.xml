<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="320dp"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_margin="8dp"
   android:padding="4dp"
android:background="#ffffff"
app:cardCornerRadius="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llContainer"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:weightSum="14"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"


            android:layout_weight="3"
            android:orientation="vertical">
            <TextView
                android:textAlignment="center"
                android:id="@+id/expertStatus"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="STATUS"/>
            <TextView
                android:textAlignment="center"
                android:id="@+id/rateExpert"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="STATUS"/>
            <TextView
                android:textAlignment="center"
                android:id="@+id/expExpert"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="STATUS"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="8">
            <Button
                android:id="@+id/btnTalk"
                android:text="TALK NOW"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/colorMain"
                android:layout_weight="1"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6">
                <ImageView
                    android:layout_centerInParent="true"

                    android:id="@+id/imgExpert"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:background="@drawable/image"

                    android:src="@drawable/app_logo"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/nameExpert"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:background="@color/colorMain"
                android:text="NAME"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="3">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.75"
                    android:textAlignment="viewEnd"
                    android:text="CHAT"/>
                <ImageView
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.75"
                    android:src="@drawable/chat_symbol"
                    android:scaleType="fitEnd"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:padding="5dp"
                    android:layout_weight="0.75"
                    android:textAlignment="viewStart"
                    android:text="CALL"/>
                <ImageView
                    android:id="@+id/imgCall"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.75"
                    android:src="@drawable/call_symbol"
                    android:scaleType="fitStart"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>